 <% if current_user.role == "admin" %>
   <h1 style="color: black;"><b>ADMIN PORTAL</b></h1>
<% else %>
  <h1 style="color: black;"><b>COMPANY PORTAL</b></h1>
<% end %>

 

 <center><h2>List of Jobs</h2></center>
<center>
  <div style="overflow-y: scroll; height: 600px;">
  <table class="table table-striped">
  <table class="table align-middle">
  <table class="table table-striped table-fixed">
   <thead style="position: sticky; top: 0; background-color: white;">
    <tr>
      
       <th scope="col">Title</th>
      <th scope="col">JobType</th>
      <th scope="col">Salary</th>
      <th scope="col">Location</th>
      <th scope="col">Description</th> 
        <th scope="col">Action</th> 
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.jobtype %></td>
      <td><%= job.salary %></td>
      <td><%= job.location %></td>
      <td><%= job.description %></td>
      <td><%= link_to 'Show', job_path(job) ,class:"btn btn-outline-primary" %></td>
      <td><%= link_to 'Edit', edit_job_path(job),class:"btn btn-outline-success" %></td>
       <td><%= link_to 'Destroy', job_path(job),class:"btn btn-outline-danger",
              method: :delete,
              data: { "turbo-method": :delete, confirm: 'Are you sure?'  }
               %></td>
    </tr>
  <% end %>
</tbody>
</table>
</table>
</table>
</div>
</center>
<br>
<%= link_to 'New job', new_job_path,class:"btn btn-success" %>
<%= link_to 'All Users', all_user_jobs_path,class: "btn btn-primary"%>
<%= link_to 'Applicant', applicant_jobs_path,class: "btn btn-warning"%>

 <center><%= button_to 'logout', destroy_user_session_path,class: "btn btn-secondary",method: :delete %></center>


