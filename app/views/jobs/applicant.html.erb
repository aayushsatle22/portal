<center><h1>List of Applicants</h1></center>

<table class="table table-striped">
  <table class="table align-middle">
  <thead>
    <tr>
      
      <th scope="col">User_Id</th>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Email</th>
      <th scope="col">Job_Id</th>
      <th scope="col">Job_Title</th>
    </tr>
  </thead>
 <% @applied_jobs.each do |job| %>
  <tr>
    <td><%= job.user_id %></td>
    <td><%= job.name %></td>
    <td><%= job.surname %></td>
    <td><%= job.email %></td>
    <td><%= job.job_id %></td>
    <td><%= job.title %></td>


    <td>
       <% if job.resume.attached? %>
    <%= link_to 'Download Resume', rails_blob_path(job.resume) %>
  <% end %>
    </td>

    <td><%= link_to 'interview',new_interview_path(user_id: job.user_id,job_id: job.job_id) ,class: "btn btn-info" %></td>
    <% interview = Interview.find_by(user_id: job.user_id, job_id: job.job_id) %>

    <% if interview.present? %>
    <td><%= link_to 'status', interview_path(id: interview.id), class: "btn btn-info" %></td>
    <% end %>

  </tr>
<% end %>
  
</table>


<center><%= link_to 'back', jobs_path ,class: "btn btn-info" %></center>
































