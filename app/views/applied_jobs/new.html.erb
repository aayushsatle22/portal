
<div class="d-flex align-items-center justify-content-center" style="height: 90vh">
<div class="card" style="width: 20rem;" >
  <div class="card border-dark shadow-sm">
  <div class="card-body">
     <h2 class="card-title">Application Form</h2>

<%= form_for @applied_job do |f| %>
   <p>
    <%= f.label :userid %><br>
    <%= f.text_field :user_id, value: current_user.id,size: 20 %>
  </p>
  <p>
    <%= f.label :jobid %><br>
    <%= f.text_field :job_id, value: @job.id ,size:20 %>
  </p>
 <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, value: current_user.name,size:20 %>
  </p>
  <p>
    <%= f.label :surname %><br>
    <%= f.text_field :surname, value: current_user.surname,size:20 %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, value: current_user.email,size:20 %>
  </p>
  <p>
    <%= f.label :contactno %><br>
    <%= f.text_field :contactno,size:20 %>
  </p>
  <p>
    <%= f.label :experience %><br>
    <%= f.text_area :experience,size:20 %>
  </p>
  
 
  <p>
    <%= f.submit("Submit", class: "btn btn-primary") %>
  </p>
<% end %>
</div>
</div>
</div>
</div>