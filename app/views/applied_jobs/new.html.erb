
<div class="d-flex align-items-center justify-content-center" style="height: 90vh">
<div class="card" style="width: 20rem;" >
  <div class="card border-dark shadow-sm">
  <div class="card-body">
     <h2 class="card-title">Application Form</h2>

<%= form_for @applied_job,data: { turbo: false} do |f| %>
   <p>
   
    <%= f.hidden_field :user_id, value: current_user.id,size: 20 %>
     
  </p>
  <p>
    
    <%= f.hidden_field :job_id, value: params[:job_id] ,size:20 %>
    
  </p>
 <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, value: current_user.name,size:20 %>
     <% @applied_job.errors.full_messages_for(:name).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </p>
  <p>
    <%= f.label :surname %><br>
    <%= f.text_field :surname, value: current_user.surname,size:20 %>
     <% @applied_job.errors.full_messages_for(:surname).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, value: current_user.email,size:20 %>
     <% @applied_job.errors.full_messages_for(:email).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </p>
  <p>
    <%= f.label :contactno %><br>
    <%= f.text_field :contactno,size:20 %>
     <% @applied_job.errors.full_messages_for(:contactno).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </p>
  <p>
    <%= f.label :experience %><br>
    <%= f.text_area :experience,size:20 %>
     <% @applied_job.errors.full_messages_for(:experience).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </p>
  
  <p>
  <%= f.label :resume %><br>
  <%= f.file_field :resume %>
   <% @applied_job.errors.full_messages_for(:resume).each do |message| %>
    <span><%= message %></span>
  <% end %>
</p>

 
  <p>
    <%= f.submit("Submit", class: "btn btn-primary") %>
  </p>
<% end %>
<% if flash[:error].present? %>
  <div class="error_message">
    <%= flash[:error] %>
  </div>
<% end %>
</div>
</div>
</div>
</div>