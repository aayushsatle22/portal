<h1>Application Form</h1>
<%= form_for @applied_job do |f| %>
   <p>
    <%= f.label :userid %><br>
    <%= f.text_field :user_id, value: current_user.id,size: 20 %>
  </p>
  <p>
    <%= f.label :jobid %><br>
    <%= f.text_area :job_id, value: @job.id ,size:20 %>
  </p>
 <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, value: current_user.name,size:20 %>
  </p>
  <p>
    <%= f.label :surname %><br>
    <%= f.text_area :surname, value: current_user.surname,size:20 %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, value: current_user.email,size:20 %>
  </p>
  <p>
    <%= f.label :contactno %><br>
    <%= f.text_area :contactno,size:20 %>
  </p>
  <p>
    <%= f.label :experience %><br>
    <%= f.text_field :experience,size:20 %>
  </p>
  
 
  <p>
    <%= f.submit %>
  </p>
<% end %>