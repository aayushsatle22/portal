 <h1 style="color: black;"><b>USER PORTAL</b></h1>

 <center><h2>List of Jobs</h2></center>
 <%= search_form_for @q, url: :applied_jobs do |form| %>

  

<div class="form-group ">

  
  <%= form.text_field :title_cont, placeholder: "Search by title..." %>


  <%= form.submit 'Search', class: "btn btn-primary" %>
</div>
<% end %>
  <table class="table table-striped">
  <table class="table align-middle">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">JobType</th>
      <th scope="col">Salary</th>
      <th scope="col">Location</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
 
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.jobtype %></td>
      <td><%= job.salary %></td>
      <td><%= job.location %></td>
      <td><%= job.description %></td>
      <td><%= link_to 'Show', applied_job_path(job),class:"btn btn-outline-primary" %></td>
      
    </tr>
  <% end %>
</table>



<%= button_to 'myjobs', myjob_applied_jobs_path,class:"btn btn-success",method: :get %>
<center><%= button_to 'logout', destroy_user_session_path,class:"btn btn-secondary",method: :delete %></center>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>