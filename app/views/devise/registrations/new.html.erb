<div class="d-flex align-items-center justify-content-center" style="height: 90vh">
<div class="card" style="width: 20rem;" >
  <div class="card border-dark shadow-sm">
  <div class="card-body">
     <h2 class="card-title">Sign up</h2>

<%= form_for(resource, as: resource_name,data: { turbo: false}, url: registration_path(resource_name)) do |f| %>
  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",size:26 %>
     <% @user.errors.full_messages_for(:email).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,size:26%>
     <% @user.errors.full_messages_for(:password).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation ,size:26%>
     <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </div>
  
   <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name ,size:26%>
     <% @user.errors.full_messages_for(:name).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </div>

   <div class="field">
    <%= f.label :surname %><br>
    <%= f.text_field :surname ,size:26%>
     <% @user.errors.full_messages_for(:surname).each do |message| %>
      <span><%= message %></span>
    <% end %>
  </div>

 <div class="field">
  <%= f.label :role %><br>
  <%= f.select :role, [['Select role', nil], ['User', 'user'], ['Company', 'company']], { selected: @user.role }, { class: 'form-control' } %>
  <% @user.errors.full_messages_for(:role).each do |message| %>
    <span><%= message %></span>
  <% end %>
</div>

 <br>
  <div class="actions">
    <%= f.submit "Sign up" ,class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
